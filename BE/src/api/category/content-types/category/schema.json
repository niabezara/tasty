{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "thumbnail": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "uid"
    },
    "sub_collections": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sub-collection.sub-collection",
      "mappedBy": "category"
    },
    "categoryDescription": {
      "type": "richtext"
    },
    "featuredRecipe": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::recipe.recipe",
      "inversedBy": "featuredRecipe"
    }
  }
}
