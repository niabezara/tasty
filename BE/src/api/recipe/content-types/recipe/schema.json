{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "uid"
    },
    "description": {
      "type": "blocks"
    },
    "cookTime": {
      "type": "integer"
    },
    "sub_collections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::sub-collection.sub-collection",
      "mappedBy": "recipes"
    },
    "featuredRecipe": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category",
      "mappedBy": "featuredRecipe"
    }
  }
}
